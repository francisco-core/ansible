{{ ansible_managed | comment }}

[Unit]
Description=Prometheus Smokeping Prober
After=network-online.target

[Service]
Type=simple
User={{ smokeping_prober_system_user }}
Group={{ smokeping_prober_system_group }}
ExecStart={{ smokeping_prober_binary_install_dir }}/smokeping_prober \
{% if smokeping_prober_tls_server_config | length > 0 or smokeping_prober_http_server_config | length > 0 or smokeping_prober_basic_auth_users | length > 0 %}
    '--web.config.file=/etc/smokeping_prober/web_config.yaml' \
{% endif %}
    '--web.listen-address={{ smokeping_prober_web_listen_address }}' \
    '--web.telemetry-path={{ smokeping_prober_web_telemetry_path }}' \
    '--config.file=/etc/smokeping_prober/config.yaml'

SyslogIdentifier=smokeping_prober
Restart=always
RestartSec=1
StartLimitInterval=0

{% set ns = namespace(protect_home = 'yes') %}
{% for m in ansible_mounts if m.mount.startswith('/home') %}
{%   set ns.protect_home = 'read-only' %}
{% endfor %}
ProtectHome={{ ns.protect_home }}
NoNewPrivileges=yes

{% if (ansible_facts.packages.systemd | first).version is version('232', '>=') %}
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes
{% else %}
ProtectSystem=full
{% endif %}

[Install]
WantedBy=multi-user.target
